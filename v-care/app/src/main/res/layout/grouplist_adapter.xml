<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="8dp"
        android:id="@+id/layout"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/gray"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <com.pkmmte.view.CircularImageView
            android:scaleType="fitCenter"
            android:id="@+id/user_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            app:border ="true"
            app:border_width="1dp"
            app:shadow="true"
            android:src="@drawable/header_icon"/>



        <com.example.android.vcare.model2.Text_view_normal
            android:singleLine="true"
            android:id="@+id/groupname"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:textSize="15sp"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:text="David Group Request"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/chat_layout"
            android:gravity="center"
            android:background="@drawable/circle_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="center"
                android:background="@drawable/ic_chat_black_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>


        <LinearLayout
            android:layout_margin="5dp"
            android:id="@+id/view_layout"
            android:gravity="center"
            android:background="@drawable/circle_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="center"
                android:background="@drawable/ic_visibility_24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>



    </LinearLayout>

</LinearLayout>