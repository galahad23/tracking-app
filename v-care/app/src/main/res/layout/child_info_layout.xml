<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#80000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        >


        <LinearLayout
            android:orientation="vertical"
            android:background="@color/white_new"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@color/fb_buttob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.example.android.vcare.model.Text_view_bold
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:textColor="@color/white_new"
                    android:textSize="15sp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Member Detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:id="@+id/cancel"
                    android:padding="10dp"
                    android:layout_gravity="right"
                    android:src="@drawable/ic_clear_24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.example.android.vcare.model.Text_view_bold
                    android:textSize="15dp"
                    android:padding="10dp"
                    android:text="Kids Name:"
                    android:textColor="@color/white"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content" />



                <com.example.android.vcare.model.Text_view_normal
                    android:id="@+id/name"
                    android:layout_weight="1"
                    android:textSize="15dp"
                    android:padding="10dp"
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.example.android.vcare.model.Text_view_bold
                    android:textSize="15dp"
                    android:padding="10dp"
                    android:text="Address:"
                    android:textColor="@color/white"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content" />



                <com.example.android.vcare.model.Text_view_normal
                    android:id="@+id/address"
                    android:layout_weight="1"
                    android:textSize="15dp"
                    android:padding="10dp"
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.example.android.vcare.model.Text_view_bold
                    android:textSize="15dp"
                    android:padding="10dp"
                    android:text="Location Tracker:"
                    android:textColor="@color/white"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content" />



                <com.example.android.vcare.model.Text_view_normal
                    android:id="@+id/location"
                    android:layout_weight="1"
                    android:textSize="15dp"
                    android:padding="10dp"
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.example.android.vcare.model.Text_view_bold
                    android:textSize="15dp"
                    android:padding="10dp"
                    android:text="Speed:"
                    android:textColor="@color/white"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content" />



                <com.example.android.vcare.model.Text_view_normal
                    android:id="@+id/speed"
                    android:layout_weight="1"
                    android:textSize="15dp"
                    android:padding="10dp"
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.example.android.vcare.model.Text_view_bold
                    android:textSize="15dp"
                    android:padding="10dp"
                    android:text="Battery:"
                    android:textColor="@color/white"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content" />



                <com.example.android.vcare.model.Text_view_normal
                    android:id="@+id/battery"
                    android:layout_weight="1"
                    android:textSize="15dp"
                    android:padding="10dp"
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.example.android.vcare.model.Text_view_bold
                    android:textSize="15dp"
                    android:padding="10dp"
                    android:text="Wi-Fi:"
                    android:textColor="@color/white"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content" />



                <com.example.android.vcare.model.Text_view_normal
                    android:id="@+id/wifi"
                    android:layout_weight="1"
                    android:textSize="15dp"
                    android:padding="10dp"
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>




        </LinearLayout>







</RelativeLayout>
</RelativeLayout>