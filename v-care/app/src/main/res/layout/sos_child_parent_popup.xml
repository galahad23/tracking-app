<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#80000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        >


        <LinearLayout
            android:orientation="vertical"
            android:background="@color/white_new"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@color/blue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.example.android.vcare.model2.Text_view_bold
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:textColor="@color/white_new"
                    android:textSize="15sp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="SOS"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:id="@+id/cancel"
                    android:padding="10dp"
                    android:layout_gravity="right"
                    android:src="@drawable/ic_clear_24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>


            <com.example.android.vcare.model2.Text_view_bold
                android:textColor="@color/white"
                android:padding="10dp"
                android:text="Please Select One To You Want Send A SOS "
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <RadioGroup
                android:id="@+id/radiogroup"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:buttonTint="@color/Red"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:id="@+id/paypal"
                    android:padding="10dp"
                    android:layout_margin="10dp"
                    android:textSize="10dp"
                    android:textColor="@color/white_new"
                    android:background="@color/blue"
                    android:textAllCaps="true"
                    android:text="SOS TO Members"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />


                <RadioButton
                    android:gravity="center"
                    android:buttonTint="@color/Red"
                    android:layout_weight="1"
                    android:id="@+id/smoovpay"
                    android:padding="10dp"
                    android:layout_margin="10dp"
                    android:textSize="10dp"
                    android:textColor="@color/white_new"
                    android:background="@color/blue"
                    android:text="SOS TO PARENT"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </RadioGroup>


            <com.example.android.vcare.model2.Button_bold
                android:id="@+id/select_plan"
               android:layout_margin="10dp"
                android:background="@drawable/button_bg"
                android:textColor="@color/white_new"
                android:text="O K"
                android:textAllCaps="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


        </LinearLayout>







    </RelativeLayout>
</RelativeLayout>