<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <com.example.android.vcare.model2.Text_view_normal
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:text="Select Member"
            android:textColor="@color/black90"
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/child_ly"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <Spinner
                android:background="@drawable/sos_edit_bg"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:visibility="visible"
                android:id="@+id/select_child_spinner"
                android:layout_width="match_parent"
                android:layout_height="50dp"/>


            <LinearLayout
                android:background="@color/colorPrimary"
                android:layout_width="wrap_content"
                android:padding="10dp"
                android:layout_marginRight="10dp"
                android:layout_height="50dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_keyboard_arrow_down_24_1"/>
            </LinearLayout>
        </LinearLayout>

        <com.example.android.vcare.model2.Text_view_normal
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:text="Filter"
            android:textColor="@color/black90"
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/date_ly"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal"
            android:layout_width="200dp"
            android:layout_height="wrap_content">


        <com.example.android.vcare.model2.Edit_text_normal
            android:id="@+id/date_time"
            android:layout_weight="1"
            android:padding="10dp"
            android:focusable="false"
            android:textColor="@color/white_new"
            android:hint=""
            android:textColorHint="@color/white_new"
           android:background="@drawable/sos_edit_bg"
           android:layout_width="match_parent"
           android:layout_height="50dp" />
            <LinearLayout
                android:background="@color/colorPrimary"
                android:layout_width="wrap_content"
                android:padding="10dp"
                android:layout_height="50dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_insert_invitation_24"/>
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/main_ly"
           android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/green"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.example.android.vcare.model2.Text_view_normal
                android:padding="10dp"
                android:text="Sr."
                android:textColor="@color/white_new"
                android:layout_width="40dp"
                android:layout_height="wrap_content" />
    <View
        android:background="@color/edit_text_linecolor"
        android:layout_width="0.5dip"
        android:layout_height="match_parent"></View>

            <com.example.android.vcare.model2.Text_view_normal
                android:layout_weight="1"
                android:padding="10dp"
                android:text="Address"
                android:textColor="@color/white_new"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <View
                android:background="@color/edit_text_linecolor"
                android:layout_width="0.5dip"
                android:layout_height="match_parent"></View>


            <com.example.android.vcare.model2.Text_view_normal
                android:padding="10dp"
                android:text="Date"
                android:textColor="@color/white_new"
                android:layout_width="80dp"
                android:layout_height="wrap_content" />
            <View
                android:background="@color/edit_text_linecolor"
                android:layout_width="0.5dip"
                android:layout_height="match_parent"></View>



            <LinearLayout
                android:focusable="false"
                android:id="@+id/view"
                android:layout_width="wrap_content"
                android:padding="10dp"
                android:layout_height="50dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_visibility_24"/>
            </LinearLayout>
        </LinearLayout>


        <android.support.v7.widget.RecyclerView
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/recycleview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


    </LinearLayout>
</RelativeLayout>

