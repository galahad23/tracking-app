<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context="com.example.android.vcare.pending.Multiple_Zone">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:background="@color/green"
        android:layout_width="match_parent"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:layout_height="?android:attr/actionBarSize">

        <com.example.android.vcare.model2.Text_view_normal
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Zone"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/white_new"
            android:textSize="20dp"/>
    </android.support.v7.widget.Toolbar>




       <ListView
           android:id="@+id/listview"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:layout_below="@+id/toolbar"
           android:layout_above="@+id/btn_lyout"
           android:scrollbars="vertical"
           android:layout_marginLeft="10dp"
           android:layout_marginRight="10dp"/>


    <LinearLayout
        android:layout_margin="10dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/btn_lyout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.example.android.vcare.model2.Button_bold
            android:layout_marginRight="5dp"
            android:background="@drawable/button_bg_corner"
            android:layout_weight="1"
            android:text="SUBMIT"
            android:textColor="@color/white_new"
            android:id="@+id/submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />



        <com.example.android.vcare.model2.Button_bold
            android:layout_marginLeft="5dp"
            android:background="@drawable/button_bg_corner"
            android:layout_weight="1"
            android:text="Add More"
            android:textColor="@color/white_new"
            android:id="@+id/add_more"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />




    </LinearLayout>
</RelativeLayout>
