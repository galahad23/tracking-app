<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context="com.example.android.vcarechild.Login">


    <android.support.v4.widget.NestedScrollView
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_marginTop="10dp"
            android:paddingBottom="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <android.support.design.widget.TextInputLayout
                android:textCursorDrawable="@null"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:id="@+id/input_layout_oldpassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.example.android.vcare.model.Edit_text_normal
                    android:singleLine="true"
                    android:textCursorDrawable="@null"
                    android:id="@+id/old_password"
                    android:backgroundTint="@color/edit_text_linecolor"
                    android:textColor="@color/primarydark"
                    android:layout_marginTop="10dp"
                    android:padding="10dp"
                    android:hint="Old password"
                    android:inputType="textPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </android.support.design.widget.TextInputLayout>




            <android.support.design.widget.TextInputLayout
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:id="@+id/input_layout_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.example.android.vcare.model.Edit_text_normal
                    android:singleLine="true"
                    android:textCursorDrawable="@null"
                    android:id="@+id/password"
                    android:backgroundTint="@color/edit_text_linecolor"
                    android:textColor="@color/primarydark"
                    android:layout_marginTop="10dp"
                    android:padding="10dp"
                    android:hint="New password"
                    android:inputType="textPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </android.support.design.widget.TextInputLayout>



            <android.support.design.widget.TextInputLayout
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:id="@+id/input_layout_confirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.example.android.vcare.model.Edit_text_normal
                    android:singleLine="true"
                    android:textCursorDrawable="@null"
                    android:id="@+id/confirm"
                    android:backgroundTint="@color/edit_text_linecolor"
                    android:textColor="@color/primarydark"
                    android:layout_marginTop="10dp"
                    android:padding="10dp"
                    android:hint="Confirm password"
                    android:inputType="textPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </android.support.design.widget.TextInputLayout>


            <com.example.android.vcare.model.Button_normal
                android:id="@+id/change"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/button_bg"
                android:textColor="@color/white_new"
                android:text="Change"
                android:textAllCaps="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</RelativeLayout>
