<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context="com.example.android.vcare.pending.New_group">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:background="@color/green"
        android:layout_width="match_parent"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:layout_height="?android:attr/actionBarSize">

        <com.example.android.vcare.model2.Text_view_normal
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Group"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/white_new"
            android:textSize="20dp"/>
    </android.support.v7.widget.Toolbar>




    <RelativeLayout
        android:id="@+id/imagly"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/toolbar"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        >

         <com.pkmmte.view.CircularImageView
            android:scaleType="fitCenter"
            android:layout_marginTop="10dp"
            android:id="@+id/userimage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            app:border ="true"
            app:border_width="1dp"
            app:shadow="true"
            android:src="@drawable/group_icon"/>


        <LinearLayout
            android:id="@+id/add_picture"
            android:background="@drawable/btn_blue_oval"
            android:layout_marginTop="15dp"
           android:layout_alignParentRight="true"
            android:layout_width="30dp"
            android:layout_height="30dp">

            <ImageView
                android:background="@drawable/add_white"
                android:layout_width="30dp"
                android:layout_height="30dp" />
        </LinearLayout>
    </RelativeLayout>


    <com.example.android.vcare.model2.Text_view_normal
        android:id="@+id/grpname"
        android:textSize="15sp"
        android:layout_marginTop="30dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/imagly"
        android:textColor="@color/white"
        android:text="@string/groupText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


<com.example.android.vcare.model2.Edit_text_normal
    android:padding="10dp"
    android:hint="Group name"
    android:textColorHint="@color/white_new"
    android:singleLine="true"
    android:textColor="@color/white_new"
    android:layout_margin="10dp"
    android:textCursorDrawable="@drawable/color_cursor"
    android:background="@drawable/sos_edit_bg"
    android:id="@+id/groupname"
    android:layout_below="@+id/grpname"
    android:layout_width="match_parent"
    android:layout_height="50dp" />


    <com.example.android.vcare.model2.Button_normal
        android:layout_below="@+id/groupname"
        android:id="@+id/add_group"
        android:layout_margin="10dp"
        android:background="@drawable/button_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:textAllCaps="false"
        android:text="Next"
        android:textColor="@color/white_new"/>

</RelativeLayout>
